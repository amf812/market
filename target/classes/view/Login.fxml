<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.image.*?>
<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane prefHeight="615.0" prefWidth="923.0" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="view.LoginController">
   <children>
      <ImageView fitHeight="87.0" fitWidth="586.0" layoutX="169.0" layoutY="36.0" pickOnBounds="true" preserveRatio="true">
         <image>
            <Image url="@GVSU-Marketplace.PNG" />
         </image>
      </ImageView>
      <VBox alignment="CENTER" layoutX="246.0" layoutY="123.0" prefWidth="431.0">
         <children>
            <HBox alignment="BOTTOM_CENTER" prefHeight="100.0" prefWidth="200.0" spacing="10.0">
               <children>
                  <Label text="Username:" />
                  <TextField fx:id="username" />
               </children>
               <padding>
                  <Insets right="50.0" />
               </padding>
            </HBox>
            <HBox alignment="CENTER" prefHeight="100.0" prefWidth="200.0" spacing="10.0">
               <children>
                  <Label text="Password:" />
                  <PasswordField fx:id="password" />
               </children>
               <padding>
                  <Insets right="50.0" />
               </padding>
            </HBox>
            <VBox alignment="CENTER" prefHeight="102.0" prefWidth="431.0" spacing="30.0">
               <children>
                  <Button mnemonicParsing="false" onAction="#loginButtonClicked" text="Login" />
                  <Button mnemonicParsing="false" onAction="#forgotPasswordButtonClicked" text="Forgot Password?" />
               </children>
               <padding>
                  <Insets left="10.0" />
               </padding>
            </VBox>
            <HBox alignment="CENTER" prefHeight="100.0" prefWidth="200.0" spacing="50.0">
               <children>
                  <Label text="Don't have an Account?" />
                  <Button mnemonicParsing="false" onAction="#createAccountButtonClicked" text="Create New Account" />
               </children>
               <opaqueInsets>
                  <Insets />
               </opaqueInsets>
            </HBox>
         </children>
      </VBox>
   </children>
</AnchorPane>
